@model SoundBase.Models.ProjectEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<partial name="_sideBar" />

<div class="projectContainer">
    <partial name="_ProjectTopBar" />
    <div class="editContainer">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Project.ProjectId" />
            <input type="hidden" asp-for="Project.DateCreated" />
            <input type="hidden" asp-for="Project.CreatorId" />
            <input type="hidden" asp-for="ImagePath" />

            <div class="editFormBackground">
                @if (ViewBag.Error == true)
                {
                    <div style="color: white; font-weight: bold">Error! Cover Image must be a .jpg or .png file!</div>
                }
                <div class="editFormGroup">
                    <label class="categoryTitle">Edit Artist</label><br />
                    <input asp-for="Project.ArtistName" class="editInput" />
                    <span asp-validation-for="Project.ArtistName" class="text-danger"></span>
                </div>
                <div class="editFormGroup">
                    <label class="categoryTitle">Edit Title</label><br />
                    <input asp-for="Project.Title" class="editInput" />
                    <span asp-validation-for="Project.Title" class="text-danger"></span>
                </div>
                <div class="editFormGroup">
                    <label class="categoryTitle">Edit Description</label><br />
                    @Html.TextArea("Project.Description", new { rows = 4, cols = 30 })
                    <span asp-validation-for="Project.Description" class="text-danger"></span>
                </div>
                <div class="editFormGroup">
                    <label for="imageUpload" class="categoryTitle">
                        Edit Cover Image (Must be a .jpg or .png file)<br />
                        <div class="uploadButton">
                            Choose File
                        </div>
                    </label><br />
                    <input id="imageUpload" asp-for="ImageFile" class="inputFile" type="file" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
            </div>
            <div class="editFormGroup">
                <button type="submit" class="editSaveButton">Save Changes</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
