@model SoundBase.Models.Project

@{
    ViewData["Title"] = "Members";
}

<partial name="_sideBar" />

<div class="projectContainer">
    <partial name="_ProjectTopBar" />
    <a class="wideButton" asp-action="InviteMembers" asp-route-id="@ViewBag.ProjectId">Invite Members</a>
    <div class="memberCardContainer">
        @foreach (ProjectUser projectUser in Model.ProjectUsers)
        {
            <div class="memberCard">
                <div class="memberCardInfo">
                    <div class="memberCardName">
                        @projectUser.User.FirstName @projectUser.User.LastName
                        @if (projectUser.IsAdmin)
                        {
                            <span class="icon fas fa-user-cog fa-sm"></span>
                        }
                    </div>
                    <div class="memberCardRole">
                        @if (projectUser.IsAdmin)
                        {
                            <span>Admin</span>
                        }
                        else
                        {
                            <span>Member</span>
                        }
                    </div>
                    <div class="memberCardRole" style="font-size: .8em">
                        Added on @projectUser.DateAdded.ToString("MMMM d, hh:mm tt")
                    </div>
                </div>
            </div>
        }
    </div>
</div>